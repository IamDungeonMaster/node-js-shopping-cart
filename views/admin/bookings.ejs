 <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="/css/background.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id._id %> </h1>
                            <ul class="orders__products">
                                    <li class="orders__products-item">Product - <%= order._id.title %> 
                                        <br>
                                        Qty. - <%= order._id.quantity %>
                                        <br>
                                        User Id - <%= order._id.userId %>
                                        <br>
                                        Price - <%= order._id.price%>
                                        <br>
                                        Total Amount - <%= order._id.Total%>
                                     </li>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
